{
  "name": "nats-accounting",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pkill -f vite || true && rm server.log || true && touch server.log && vite 2>&1 | tee -a server.log",
    "build": "rm -rf dist && tsc && vite build && rollup -c rollup.config.mjs",
    "build:client": "tsc -p src/client/tsconfig.json && vite build",
    "build:server": "rollup -c rollup.config.mjs",
    "clean": "rm -rf dist",
    "serve": "NODE_ENV=production node dist/server/index.js",
    "start": "NODE_ENV=production node dist/server/index.js",
    "build:netlify": "npm run clean && npm run build && npm run compress",
    "compress": "find dist/client -name '*.js' -exec gzip -k {} \\; && find dist/client -name '*.css' -exec gzip -k {} \\;",
    "analyze": "npm run build:client && npx vite-bundle-analyzer dist/client"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns-tz": "^3.2.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "googleapis": "^159.0.0",
    "ical-generator": "^9.0.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.2",
    "mongoose": "^8.5.1",
    "node-ical": "^0.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "redis": "^5.8.2",
    "rrule": "^2.8.1",
    "serverless-http": "^4.0.0",
    "tsdav": "^2.1.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "compression": "^1.7.4",
    "glob": "^11.0.3",
    "rollup": "^4.52.2",
    "rollup-plugin-copy": "^3.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vite": "^7.1.4"
  }
}
