{
  "name": "nats-accounting-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "vite",
    "dev:split": "npm run dev -w backend & npm run dev -w frontend",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:frontend && npm run build:backend && node scripts/merge-dist.js",
    "build:frontend": "npm run build -w frontend",
    "build:backend": "npm run build -w backend",
    "serve": "NODE_ENV=production node server.ts"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/luxon": "^3.7.1",
    "compression": "^1.7.4",
    "tsx": "^4.7.0"
  },
  "dependencies": {
    "date-fns-tz": "^3.2.0",
    "luxon": "^3.7.2"
  }
}
