{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    // rootDir removed to allow importing from shared workspace during build
    "outDir": "../dist/api",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {}
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
